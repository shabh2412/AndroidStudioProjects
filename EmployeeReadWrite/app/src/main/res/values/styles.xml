<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="generalEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">16dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="generalButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="generalTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/text_view_background</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>